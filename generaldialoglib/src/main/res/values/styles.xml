<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 下入下出动画 -->
    <style name="dialog_down_enter_down_exit_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_slide_bottom_in</item>
        <item name="@android:windowExitAnimation">@anim/dialog_slide_bottom_out</item>
    </style>

    <!-- 上入上出动画 -->
    <style name="dialog_up_enter_up_exit_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_slide_top_in</item>
        <item name="@android:windowExitAnimation">@anim/dialog_slide_top_out</item>
    </style>

    <!-- 左入左出动画 -->
    <style name="dialog_left_enter_left_exit_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_slide_left_in</item>
        <item name="@android:windowExitAnimation">@anim/dialog_slide_left_out</item>
    </style>

    <!-- 右入右出动画 -->
    <style name="dialog_right_enter_right_exit_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_slide_right_in</item>
        <item name="@android:windowExitAnimation">@anim/dialog_slide_right_out</item>
    </style>

    <!-- 淡入淡出动画 -->
    <style name="dialog_push_enter_push_exit_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_slide_push_in</item>
        <item name="@android:windowExitAnimation">@anim/dialog_slide_push_out</item>
    </style>

    <!--子项样式-->
    <style name="dialog_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y50</item>
        <item name="android:background">
            @drawable/dialog_drawable_normal_radius_false_stroke_false_cancel_selector
        </item>
    </style>

    <!-- 按钮样式 -->
    <style name="dialog_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y40</item>
        <item name="android:textColor">@color/dialog_color_333333</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">
            @drawable/dialog_drawable_normal_radius_false_stroke_false_confirm_selector
        </item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
